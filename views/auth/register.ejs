<body>

    <div class="login">
        <h1 class="text-center">Register</h1>

        <form action="/register" method="POST">

            <div class="form-group">
                <label class="form-label" for="email">Username:</label>
                <input class="form-control" 
                name="username"
                 type="text"
                placeholder="Enter Username"  
                id="username" required>
                
            </div>

            <div class="form-group">
                <label class="form-label" for="email">Email Address</label>
                <input class="form-control"  placeholder="Enter Email"   name="email" type="email" id="email" required>
                
            </div>

            <div class="form-group" >
                <label class="form-label" for="Password">Password</label>
                <input class="form-control"  placeholder="Enter Password"  name="password" type="password" id="password" required>
                
            </div>

     
            <input  class="btn btn-success w-100" type="submit" value="REGISTER">
            
        </form>
        <a href="/Login">Login</a>
    </div>


</body>



